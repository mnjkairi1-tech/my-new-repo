
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Manoj's Global Admin Access
    function isGlobalOwner() {
      return isSignedIn() && (
        request.auth.token.email == "mnjkairi1@gmail.com" ||
        request.auth.uid == "t9B6SJjDhAPxv3t9RunFmS3Ne4A2"
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    // 1. Allow Owner to do EVERYTHING everywhere
    match /{allPaths=**} {
      allow read, write: if isGlobalOwner();
    }

    // 2. Payment Requests - Public Create for all users
    match /paymentRequests/{requestId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isGlobalOwner();
    }

    // 3. Support & Bug Reports - Public Create for all users
    match /supportRequests/{id} {
      allow create: if isSignedIn();
    }
    
    match /bugReports/{id} {
      allow create: if isSignedIn();
    }

    // 4. User Data (Profiles & Billing History)
    match /userProfiles/{userId} {
      allow read: if isSignedIn(); // Allow reading profiles to show names/ticks in community
      allow write: if isOwner(userId);
    }
    
    match /user_profiles/{userId} {
      allow read: if isSignedIn(); // Allow reading profiles to show names/ticks in community
      allow write: if isOwner(userId);
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }

    // 5. Publicly Readable AI Catalog
    match /aiTools/{id} {
      allow read: if true;
    }
    
    match /ai_tools/{id} {
      allow read: if true;
    }

    match /aiCategories/{id} {
      allow read: if true;
    }
    
    match /hidden_tools/{id} {
      allow read: if true;
    }

    // 6. Community Groups
    match /groups/{groupId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid);

      match /members/{userId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }

      match /messages/{messageId} {
        allow read, write: if isSignedIn();
      }

      match /tools/{toolId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }
  }
}
