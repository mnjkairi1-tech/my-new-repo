
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isGlobalOwner() {
      return isSignedIn() && (
        request.auth.token.email == "mnjkairi1@gmail.com" ||
        request.auth.uid == "t9B6SJjDhAPxv3t9RunFmS3Ne4A2" ||
        exists(/databases/$(database)/documents/roles_owner/$(request.auth.uid))
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    // 1. Payment Requests - Critical for Subscription
    match /paymentRequests/{requestId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isGlobalOwner();
    }

    // 2. Support & Bug Reports
    match /supportRequests/{id} {
      allow create: if isSignedIn();
      allow read, update, delete: if isGlobalOwner();
    }
    
    match /bugReports/{id} {
      allow create: if isSignedIn();
      allow read, update, delete: if isGlobalOwner();
    }

    // 3. User Data (Profiles, Billing History, Memberships)
    match /userProfiles/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isGlobalOwner();
    }
    
    match /user_profiles/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isGlobalOwner();
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId) || isGlobalOwner();
    }

    // 4. Publicly Readable AI Catalog
    match /aiTools/{id} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }
    
    match /ai_tools/{id} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }

    match /aiCategories/{id} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }
    
    match /hidden_tools/{id} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }

    // 5. System Roles
    match /roles_owner/{uid} {
      allow read: if isSignedIn();
      allow write: if false; // Managed via Console only
    }

    // 6. Community Groups
    match /groups/{groupId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isGlobalOwner());

      match /members/{userId} {
        allow read: if true;
        allow write: if isOwner(userId) || isGlobalOwner();
      }

      match /messages/{messageId} {
        allow read, write: if isSignedIn();
      }

      match /tools/{toolId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }
  }
}
