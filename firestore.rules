rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isGlobalOwner() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_owner/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    // 1. Global Owner: Allow full access to the designated owner
    match /{allPaths=**} {
      allow read, write: if isGlobalOwner();
    }

    // 2. Payment Requests
    match /paymentRequests/{requestId} {
      allow create: if isSignedIn();
    }

    // 3. Support & Bug Reports
    match /supportRequests/{id} {
      allow create: if isSignedIn();
    }
    
    match /bugReports/{id} {
      allow create: if isSignedIn();
    }

    // 4. User Profiles (Corrected for Blue Tick Feature)
    // Allow any signed-in user to read profiles to see Blue Ticks/Names in community
    match /userProfiles/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    match /user_profiles/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }

    // 5. AI Catalog
    match /aiTools/{id} {
      allow read: if resource.data.isActive == true || isGlobalOwner();
    }
    
    match /ai_tools/{id} {
      allow read: if resource.data.isActive == true || isGlobalOwner();
    }

    match /aiCategories/{id} {
      allow read: if true;
    }
    
    match /hidden_tools/{id} {
      allow read: if isGlobalOwner();
    }

    // 6. Community Groups
    match /groups/{groupId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid);

      match /members/{userId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }

      match /messages/{messageId} {
        allow read, write: if isSignedIn();
      }

      match /tools/{toolId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    // 7. Roles (Owner Tracking)
    match /roles_owner/{ownerUid} {
      allow read: if isSignedIn();
    }
  }
}