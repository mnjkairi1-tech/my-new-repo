rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 辅助函数 ---
    
    // 检查用户是否已登录
    function isSignedIn() {
      return request.auth != null;
    }

    // 检查用户是否拥有全局管理员（所有者）角色
    // 通过检查 /roles_owner 集合中是否存在该用户的 UID
    function isGlobalOwner() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_owner/$(request.auth.uid));
    }

    // 检查用户是否是文档的所有者（用于个人资料）
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- 集合规则 ---

    // 1. 全局所有者权限：允许管理员对所有文档进行读写
    match /{allPaths=**} {
      allow read, write: if isGlobalOwner();
    }

    // 2. 支付请求 (paymentRequests)
    match /paymentRequests/{requestId} {
      allow create: if isSignedIn();
    }

    // 3. 支持与漏洞报告
    match /supportRequests/{id} {
      allow create: if isSignedIn();
    }
    
    match /bugReports/{id} {
      allow create: if isSignedIn();
    }

    // 4. 用户资料
    match /userProfiles/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }
    
    match /user_profiles/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId);
    }

    // 5. AI 目录
    match /aiTools/{id} {
      allow read: if resource.data.isActive == true || isGlobalOwner();
    }
    
    match /ai_tools/{id} {
      allow read: if resource.data.isActive == true || isGlobalOwner();
    }

    match /aiCategories/{id} {
      allow read: if true;
    }
    
    match /hidden_tools/{id} {
      allow read: if isGlobalOwner();
    }

    // 6. 社区群组
    match /groups/{groupId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid);

      match /members/{userId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }

      match /messages/{messageId} {
        allow read, write: if isSignedIn();
      }

      match /tools/{toolId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    // 7. 管理员角色表
    match /roles_owner/{ownerUid} {
      allow read: if isSignedIn();
    }
  }
}