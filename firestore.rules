rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isGlobalOwner() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_owner/$(request.auth.uid)) ||
        request.auth.token.email == "mnjkairi1@gmail.com" ||
        request.auth.uid == "t9B6SJjDhAPxv3t9RunFmS3Ne4A2"
      );
    }

    match /userProfiles/{userId} {
      allow get, list: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId && request.resource.data.id == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if false;
    }

    match /aiCategories/{categoryId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }

    match /aiTools/{toolId} {
      allow read: if resource.data.isActive == true || isGlobalOwner();
      allow write: if isGlobalOwner();
    }
    
    // New collections for dynamic tool management
    match /ai_tools/{toolId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }

    match /hidden_tools/{toolId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }

    match /roles_owner/{ownerUid} {
      allow get: if request.auth.uid == ownerUid;
      allow list: if isGlobalOwner();
      allow write: if false;
    }
    
    match /supportRequests/{id} {
      allow create: if isSignedIn();
      allow read, write: if isGlobalOwner();
    }
    
    match /bugReports/{id} {
      allow create: if isSignedIn();
      allow read, write: if isGlobalOwner();
    }
  }
}