
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isGlobalOwner() {
      return isSignedIn() && (
        request.auth.token.email == "mnjkairi1@gmail.com" ||
        request.auth.uid == "t9B6SJjDhAPxv3t9RunFmS3Ne4A2" ||
        exists(/databases/$(database)/documents/roles_owner/$(request.auth.uid))
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Publicly readable AI Tools and Categories
    match /ai_tools/{toolId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }
    
    match /aiTools/{toolId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }

    match /aiCategories/{categoryId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }
    
    match /hidden_tools/{toolId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }

    // User Profiles - Users can read/write their own
    match /user_profiles/{userId} {
      allow read, write: if isOwner(userId) || isGlobalOwner();
    }
    
    match /userProfiles/{userId} {
      allow read, write: if isOwner(userId) || isGlobalOwner();
    }

    // Payment Requests - Any user can create, only owner can manage
    match /paymentRequests/{requestId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isGlobalOwner();
    }

    // Support & Bug Reports
    match /supportRequests/{id} {
      allow create: if isSignedIn();
      allow read, update, delete: if isGlobalOwner();
    }
    
    match /bugReports/{id} {
      allow create: if isSignedIn();
      allow read, update, delete: if isGlobalOwner();
    }

    // Generic User Data (Billing history, memberships etc)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId) || isGlobalOwner();
    }

    // Owner Roles
    match /roles_owner/{ownerUid} {
      allow read: if isSignedIn();
      allow write: if false; // Only manageable via Firebase Console
    }

    // Community Groups
    match /groups/{groupId} {
      allow read: if true; 
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isGlobalOwner());

      match /members/{userId} {
        allow read: if true;
        allow write: if isOwner(userId) || isGlobalOwner();
      }

      match /messages/{messageId} {
        allow read: if isSignedIn(); 
        allow write: if isSignedIn();
      }

      match /tools/{toolId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }
  }
}
