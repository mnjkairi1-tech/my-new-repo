rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isGlobalOwner() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_owner/$(request.auth.uid));
    }

    // --- User Profiles ---
    // Strictly private: Users can only read/write their own profile.
    match /user_profiles/{userId} {
      allow read, write: if isOwner(userId) || isGlobalOwner();
    }

    // --- AI Catalog ---
    match /ai_tools/{id} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }

    match /aiCategories/{id} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }
    
    match /hidden_tools/{id} {
      allow read, write: if isGlobalOwner();
    }

    // --- Community Groups ---
    match /groups/{groupId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isGlobalOwner() || (isSignedIn() && resource.data.ownerId == request.auth.uid);

      match /members/{userId} {
        allow read: if true;
        allow write: if isOwner(userId) || isGlobalOwner();
      }

      match /messages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isGlobalOwner();
      }

      match /tools/{toolId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    // --- Admin & Support ---
    match /paymentRequests/{requestId} {
      allow create: if isSignedIn();
      allow read, write: if isGlobalOwner();
    }

    match /supportRequests/{id} {
      allow create: if isSignedIn();
      allow read, write: if isGlobalOwner();
    }
    
    match /bugReports/{id} {
      allow create: if isSignedIn();
      allow read, write: if isGlobalOwner();
    }

    match /roles_owner/{ownerUid} {
      allow read: if isSignedIn();
      allow write: if isGlobalOwner();
    }

    // Private internal user data history
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId) || isGlobalOwner();
    }

    // --- Fallback Global Rule ---
    match /{allPaths=**} {
      allow read, write: if isGlobalOwner();
    }
  }
}