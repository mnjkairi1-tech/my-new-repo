
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isGlobalOwner() {
      return isSignedIn() && (
        request.auth.token.email == "mnjkairi1@gmail.com" ||
        request.auth.uid == "t9B6SJjDhAPxv3t9RunFmS3Ne4A2" ||
        exists(/databases/$(database)/documents/roles_owner/$(request.auth.uid))
      );
    }

    // User Profiles
    match /user_profiles/{userId} {
      allow read: if isSignedIn() && (request.auth.uid == userId || isGlobalOwner());
      allow write: if isSignedIn() && (request.auth.uid == userId || isGlobalOwner());
    }
    
    match /userProfiles/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isGlobalOwner());
    }

    // AI Tools and Categories (Public Read, Owner Write)
    match /ai_tools/{toolId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }
    
    match /aiTools/{toolId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }

    match /aiCategories/{categoryId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }
    
    match /hidden_tools/{toolId} {
      allow read: if true;
      allow write: if isGlobalOwner();
    }

    // Submissions (Any user can create, Owner can manage)
    match /paymentRequests/{id} {
      allow create: if isSignedIn();
      allow read, update, delete: if isGlobalOwner();
    }
    
    match /supportRequests/{id} {
      allow create: if isSignedIn();
      allow read, update, delete: if isGlobalOwner();
    }
    
    match /bugReports/{id} {
      allow create: if isSignedIn();
      allow read, update, delete: if isGlobalOwner();
    }

    // Admin Roles
    match /roles_owner/{ownerUid} {
      allow read: if isSignedIn() && (request.auth.uid == ownerUid || isGlobalOwner());
      allow write: if false;
    }

    // Generic User Data & Billing History
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isGlobalOwner());
    }

    // Community / Groups
    match /groups/{groupId} {
      allow read: if true; 
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isGlobalOwner());

      match /members/{userId} {
        allow read: if true;
        allow write: if isSignedIn() && (request.auth.uid == userId || isGlobalOwner());
      }

      match /messages/{messageId} {
        allow read: if isSignedIn(); 
        allow write: if isSignedIn();
      }

      match /tools/{toolId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }
  }
}
